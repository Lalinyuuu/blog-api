generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String
  author    String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("posts")
}

model Author {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  bio       String?
  createdAt DateTime @default(now())

  @@map("authors")
}
